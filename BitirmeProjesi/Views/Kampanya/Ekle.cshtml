
@{
    ViewBag.Title = "Kampanya Ekle";
}

<h2>Kampanya Ekle</h2>
<div class="row">
    <div class="col-sm-12">
        <div class="white-box p-l-20 p-r-20">
           
            <div class="row">
                <div class="col-md-12">
                    <form class="form-material form-horizontal">
                        <div class="form-group">
                            <label class="col-md-12">Kampanya Başlığı</label>
                            <div class="col-md-12">
                                <input id="kampanyaAd" type="text" class="form-control" placeholder="Kampanya Adını Giriniz">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Aday Adı</label>
                            <div class="col-md-12">
                                <input id="adayAdi" type="text" class="form-control" placeholder="Aday Adını Giriniz">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Kampanya Metni</label>
                            <div class="col-md-12">
                                @*<input id="kampanyaMetni" type="text" class="form-control" placeholder="Kampanya Metnini Giriniz">*@
                                <textarea id="kampanyaMetni" class="form-control" rows="5" placeholder="Kampanya Metnini Giriniz"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button id="kampanyaKaydet" class="btn btn-block btn-info">Kaydet</button>
                                @*<input type="button" id="kampanyaKaydet" class="btn btn-block btn-info" value="Kaydet" />*@
                            </div>

                        </div>
                        
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

